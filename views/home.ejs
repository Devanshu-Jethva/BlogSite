<%- include('partials/header') -%>

<h1>Home</h1>

<p><%= hsc %></p>

<% homePosts.forEach(function(post){  %>
    <h1><%= post.title %></h1>
    <% if(post.body.length>100){ %>
        <p>
            <%= post.body.substring(0,100) + " ..." %>
            <a href="/posts/<%=post._id%>">Read Full Blog</a>
        </p>
    <% } else { %>
        <p>
            <%= post.body %>
            <a href="/posts/<%=post._id%>">Read Full Blog</a>
        </p>
    <% } %>
    
<% })  %>


<%- include('partials/footer') -%>